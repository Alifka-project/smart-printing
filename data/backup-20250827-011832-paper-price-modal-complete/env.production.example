# Production Environment Configuration for SmartPrint System
# Copy this to your Vercel environment variables

# Database Configuration (REQUIRED)
DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# Twilio Configuration (REQUIRED for OTP functionality)
NEXT_PUBLIC_TWILIO_ACCOUNT_SID=your_account_sid_here
NEXT_PUBLIC_TWILIO_AUTH_TOKEN=your_auth_token_here
NEXT_PUBLIC_TWILIO_FROM_NUMBER=+971588712409
NEXT_PUBLIC_TWILIO_VERIFY_SERVICE_ID=your_verify_service_id_here

# Location Services (Optional - for IP geolocation)
IPAPI_KEY=your_ipapi_key_here
IPINFO_TOKEN=your_ipinfo_token_here
IPGEOLOCATION_KEY=your_ipgeolocation_key_here

# App Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_NAME="SmartPrint Print Management System"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_SUPPORT_EMAIL=support@smartprint.com

# Prisma Configuration (REQUIRED)
PRISMA_GENERATE_DATAPROXY=true

# Security (Optional - for enhanced security)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://your-domain.vercel.app
